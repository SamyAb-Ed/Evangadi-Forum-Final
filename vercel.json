{
  "version": 2,
  "builds": [
    {
      "src": "Client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/Client/dist/$1"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://evangadi-forum-final.onrender.com/api"
  },
  "functions": {
    "Client/package.json": {
      "runtime": "nodejs22.x"
    }
  }
}
